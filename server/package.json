{
  "name": "sock-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "node": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json # --emitDeclarationOnly --declaration --outDir ./dist && esbuild ./src/** --outdir=./dist --bundle --platform=node --target=node18"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "outDir": "./dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "esbuild": "^0.21.4",
    "tsup": "^8.1.0",
    "tsx": "^4.15.2"
  },
  "dependencies": {
    "ws": "^8.17.0",
    "zod": "^3.23.8"
  }
}
