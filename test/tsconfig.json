{
  "extends": "../tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "esModuleInterop": true,
    "paths": {
      "#/shared/*": ["../shared/src/*"],
      "#/server/*": ["../server/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["../shared/src/*"],
  "exclude": ["../server/src/*"],
  "references": [
    { "path": "../shared" },
    { "path": "../server" }
  ]
}
